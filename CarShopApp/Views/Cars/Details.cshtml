@model Car
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<dl>
    <dt>Model</dt>
    <dd>@Model.ModelName</dd>

    <dt>Brand</dt>
    <dd>@Model.Brand.Name</dd>

    <dt>Price</dt>
