@model CreateCarViewModel

    <h1>Add car for sale</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="ModelName"></label>
        <input asp-for="ModelName" />
        <span asp-validation-for="ModelName"></span>

        <label asp-for="BrandId"></label>
        <select asp-for="BrandId">
            @foreach (Brand brand in Model.BrandList)
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        </select>
        <span asp-validation-for="BrandId"></span>

        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>

        <button>Submit</button>
    </form>